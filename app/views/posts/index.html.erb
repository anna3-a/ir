    <%= t.color %>
    </br>
      <%= t.time %>
      </br>
      <%= t.season %>
      </br>
      <%= t.ranking %>
      </div>
      <div class="right-container">
<%= link_to "編集する", edit_post_path(t.id) %>
</div>
</div>
</div>
<% end %>
