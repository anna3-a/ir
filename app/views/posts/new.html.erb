<h1>色とコトバ</h1>
<h3 class="color">新規post</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :color %>
    <%= f.text_field :color, :size => 140 %>
    <%= f.label :season %>
    <%= f.text_field :season, :size => 140 %>
    <%= f.label :time %>
    <%= f.text_field :time, :size => 140 %>
    <%= f.label :comment %>
    <%= f.text_field :ranking, :size => 140 %>

    </div>
  <%= f.submit "postする" %>
<% end %>
<%= link_to "Post一覧に戻る", posts_path %>
